<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
		<meta charset="utf-8">
		<title>PhotoBomb</title>
	</head>
	<body style="background:#bdc3c7">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<div class="row">
						<div class="col-md-4">
							<img style="border-radius:50%;border:1px solid #ededed" src="{{user.profile_pic_url}}" />
						</div>
						<div class="col-md-8">
							<h1 style="font-size: 32px;line-height: 40px;font-weight: 200;">{{user.username}}</h1>
							<div class="row">
								<div class="col-md-3">
									<strong>{{user.media.count}}</strong> <span>Posts</span>
								</div>
								<div class="col-md-3">
									<strong>{{user.followed_by.count}}</strong> <span>Followers</span>
								</div>
								<div class="col-md-3">
									<strong>{{user.follows.count}}</strong> <span>Following</span>
								</div>
							</div>
							<p style="margin-top:24px">
								{{user.biography}}
							</p>
						</div>
					</div>
					<div class="row">
						{{#user.media.nodes}}
						<div class="col-md-4">
							<div style="padding:12px">
								<img style="width:100%" src="{{thumbnail_src}}" />
							</div>
						</div>
						{{/user.media.nodes}}
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
